---
import { MessageCircle } from "lucide-astro";

const WHATSAPP_NUMBER = "5493880000000"; // CAMBIAR POR TU NÚMERO
const WHATSAPP_LINK = `https://wa.me/${WHATSAPP_NUMBER}?text=Hola%20Team%20Rasta,%20quiero%20más%20info%20sobre%20las%20clases!`;
---

<a
  href={WHATSAPP_LINK}
  target="_blank"
  rel="noreferrer"
  class="fixed bottom-6 right-6 z-50 bg-[#25D366] text-white p-4 rounded-full shadow-lg hover:bg-[#20bd5a] transition-all duration-300 hover:scale-110 flex items-center justify-center group animate-fadeIn"
  aria-label="Contactar por WhatsApp"
>
  <MessageCircle size={32} class="text-white fill-white" />
  <span
    class="absolute right-full mr-3 bg-white text-zinc-900 px-3 py-1 rounded text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap shadow-md"
  >
    ¡Escribinos!
  </span>
</a>
